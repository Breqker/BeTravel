<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/alloggio"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onAlloggioClick"
                app:srcCompat="@drawable/ic_launcher" />
            <ImageView
                android:id="@+id/volo"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onVoloClick"
                app:srcCompat="@drawable/ic_launcher" />
            <ImageView
                android:id="@+id/volo_alloggio"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:onClick="onVoloAlloggioClick"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_launcher" />
            <ImageView
                android:id="@+id/taxi"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:onClick="onTaxiClick"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_launcher" />
            <ImageView
                android:id="@+id/noleggio_auto"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:onClick="onNoleggioClick"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_launcher" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="0dp">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/menu_app">

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>


</androidx.constraintlayout.widget.ConstraintLayout>