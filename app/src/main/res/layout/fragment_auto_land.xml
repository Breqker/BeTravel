<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebkg"
    android:padding="25dp">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Logo dell'applicazione"
        android:src="@drawable/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <EditText
        android:id="@+id/citta"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/search_bg"
        android:backgroundTint="#ECECEC"
        android:drawableLeft="@drawable/baseline_home_24"
        android:drawablePadding="16dp"
        android:hint="Città"
        android:inputType="textAutoComplete"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dataPartenza"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/search_bg"
        android:backgroundTint="#ECECEC"
        android:drawableLeft="@drawable/baseline_edit_calendar_24"
        android:drawablePadding="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:hint="Data di partenza"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/citta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline" />

    <EditText
        android:id="@+id/dataArrivo"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:hint="Data di arrivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/dataPartenza"
        android:background="@drawable/search_bg"
        android:drawableLeft="@drawable/baseline_edit_calendar_24"
        android:drawablePadding="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        android:backgroundTint="#ECECEC"/>

    <LinearLayout
        android:id="@+id/etaConducenteLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/dataArrivo"
        android:layout_marginTop="20dp"
        android:background="#ECECEC">

        <EditText
            android:id="@+id/etaConducente"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:hint="Età conducente: "
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dataArrivo"
            android:background="@drawable/search_bg"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="16dp"
            android:textColorHint="@color/black"
            android:backgroundTint="#ECECEC"/>

        <Spinner
            android:id="@+id/etaConducenteSpinner"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bg"
            android:spinnerMode="dropdown"
            android:backgroundTint="#ECECEC"/>

    </LinearLayout>

    <Button
        android:id="@+id/cerca"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cerca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/etaConducenteLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
