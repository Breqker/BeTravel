<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebkg"
    android:padding="25dp">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Logo dell'applicazione"
        android:src="@drawable/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/citta"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/search_bg"
        android:backgroundTint="#ECECEC"
        android:inputType="textAutoComplete"
        android:drawableLeft="@drawable/baseline_home_24"
        android:drawablePadding="16dp"
        android:layout_marginTop="20dp"
        android:hint="CittÃ "
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

    <EditText
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/search_bg"
        android:backgroundTint="#ECECEC"
        android:drawableLeft="@drawable/baseline_edit_calendar_24"
        android:drawablePadding="16dp"
        android:layout_marginTop="20dp"
        android:hint="Data"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/citta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/orario"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Data di arrivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data"
        android:background="@drawable/search_bg"
        android:drawableLeft="@drawable/baseline_timer_24"
        android:drawablePadding="16dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        android:backgroundTint="#ECECEC"/>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cerca"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orario" />

</androidx.constraintlayout.widget.ConstraintLayout>
